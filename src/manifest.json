{
	"manifest_version": 2,
	"name": "Global Media Keys",
	"short_name": "GMK",
	"description": "Use global keyboard shortcuts to control Soundcloud, Google Play Music, and YouTube.",
	"version": "1.2.7",
	"minimum_chrome_version": "45",
	"permissions": [
		"storage"
	],
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"background": {
		"scripts": [
			"js/background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["*://play.google.com/music/listen*"],
			"js": ["js/googleplaymusic.js"]
		},
		{
			"matches": ["*://soundcloud.com/*"],
			"js": ["js/soundcloud.js"]
		},
		{
			"matches": ["*://*.youtube.com/*"],
			"js": ["js/youtube.js"]
		}
	],
	"browser_action": {
		"default_icon": {
			"19": "images/icon19.png",
			"38": "images/icon38.png"
		},
		"default_popup": "html/popup.html"
	},
	"commands": {
		"media-play-pause": {
			"suggested_key": {
				"default": "MediaPlayPause"
			},
			"description": "Play/Pause",
			"global": true
		},
		"media-next": {
			"suggested_key": {
				"default": "MediaNextTrack"
			},
			"description": "Next",
			"global": true
		},
		"media-prev": {
			"suggested_key": {
				"default": "MediaPrevTrack"
			},
			"description": "Previous",
			"global": true
		},
		"media-stop": {
			"suggested_key": {
				"default": "MediaStop"
			},
			"description": "Stop",
			"global": true
		}
	}
}
